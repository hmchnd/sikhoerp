        <HBox class="footer" id="homepageFooter" FlexAlignContent="Stretch" FlexAlignItems="Stretch">
            <HBox class="sapUiTinyMarginTop sapUiTinyMarginBegin">
                <Image src="./asset/SERP.png" width="55px" height="49px" decorative="true" densityAware="true" backgroundSize="cover" backgroundPosition="initial" />
                <Text text="Opportunities don't happen, you create them." class="footeroneLiner sapUiSmallMarginTop sapUiTinyMarginBegin" />

                <!-- <Text text="c 2022" class="footerText1  sapUiLargeMarginBegin sapUiTinyMarginTop" /> -->
            </HBox>
            <VBox class="sapUiSmallMarginTop sapUiLargeMarginBegin">
                <Text text="Follow us on" class="footerText1 sapUiTinyMarginTop sapUiTinyMarginBegin" />
                <HBox>
                    <Image src="./asset/LinkedinICon.svg" width="20px" height="20px" class="sapUiTinyMarginBegin sapUiTinyMarginTop" press="onLinkedinImagePress" />
                    <Image src="./asset/TwitterIcon.svg" width="20px" height="20px" class="sapUiTinyMarginBegin sapUiTinyMarginTop" press="onLinkedinImagePress" />
                </HBox>
