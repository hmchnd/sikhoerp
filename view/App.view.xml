<mvc:View controllerName="sikhoerp.controller.App" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:tnt="sap.tnt" height="100%" xmlns:l="sap.ui.layout" xmlns:f="sap.f" xmlns:card="sap.f.cards" xmlns:core="sap.ui.core">
    <tnt:ToolHeader class="toolheaderControl">
        <Image src="./asset/SERP.png" width="55px" height="49px" decorative="true" densityAware="true" backgroundSize="cover" backgroundPosition="initial" />
        <IconTabHeader id="iconTabHeader" selectedKey="HOME" select=".onSelectTab" backgroundDesign="Transparent" mode="Inline">
            <layoutData>
                <OverflowToolbarLayoutData priority="NeverOverflow" shrinkable="true" />
            </layoutData>
            <items>
                <IconTabFilter text="HOME" key="HOME" />
                <IconTabFilter text="FAQ" key="COURSES" />
                <IconTabFilter text="FREE PREVIEW" key="CONTACT" />
            </items>
        </IconTabHeader>
    </tnt:ToolHeader>

    <l:VerticalLayout class="sapUiContentPadding">
        <Panel id="HomePanel">
            <Text text="WELCOME TO  SIKHO ERP LEARNING PLATFORM" class="welcomeText sapUiSmallMarginBegin" />
            <Toolbar class="sapUiSmallMarginTop sapUiSmallMarginBottom">
                <ToolbarSpacer />
                <Title text="Who we are ?" level="H1" class="courseweoffer" />
                <ToolbarSpacer />
            </Toolbar>

            <Text
                class="sapUiTinyMarginTop sapUiSmallMarginBegin whoWeText"
                text="SIKHO ERP is the platform to learn industry-relevant SAP skills led by domain experts. We offer online live structured classes for any individual like college students, graduates and working professionals who wants to learn skills like SAP UI5/Fiori, JavaScript, ABAP, SAP CAP Framework on SAP BTP Cloud Platform."
            />

            <Text class="sapUiSmallMarginTop sapUiSmallMarginBegin whoWeText" text="We provide free of cost job assistant program along with skill training thats include career mentoring, interview preparation, resume and Linkedin profile optimization." />

            <Carousel class="sapUiContentPadding sapUiSmallMarginTop" loop="true">
                <Image src="./asset/Trainer.jpg" alt="Live Batches" width="1000px" height="500px" />
                <Image src="./asset/bootcamp.jpg" alt="Bootcamp Session" width="1000px" height="500px" />
                <Image src="./asset/mockInterview.jpg" alt="Mock Interview" width="1000px" height="500px" />
                <Image src="./asset/jobReadyDeveloper.jpg" alt="Job Ready Developer" width="1000px" height="500px" />
            </Carousel>

            <Toolbar>
                <ToolbarSpacer />
                <Title text="Courses We Offer" level="H1" class="courseweoffer" />
                <ToolbarSpacer />
            </Toolbar>
            <HBox alignItems="Center" justifyContent="Center">
                <f:Card class="sapUiMediumMargin" width="500px">
                    <f:header>
                        <card:Header title="SAP Fiori Developer Course" subtitle="50 Live Lectures. No Experience Required." />
                    </f:header>
                    <f:content>
                        <VBox class="sapUiTinyMarginBegin sapUiTinyMarginEnd sapUiTinyMarginBottom">
                            <Toolbar>
                                <ToolbarSpacer />
                                <Title text="About this course" level="H2" />
                                <ToolbarSpacer />
                            </Toolbar>
                            <Text text="Use the UI5 framework, SAP Web IDE / SAP BTP BAS and SAP Fiori Launchpad to build and run enterprise-level web applications." />
                            <Toolbar>
                                <ToolbarSpacer />
                                <Title text="Course highlights:" level="H2" />
                                <ToolbarSpacer />
                            </Toolbar>
                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="blue" />
                                <Text text="This  course will focus on using the UI5 framework to develop enterprise-level web applications for running on the web browser." />
                            </HBox>
                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="blue" />
                                <Text text="we’ll start from the absolute beginner level web development introduction." />
                            </HBox>
                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="blue" />
                                <Text text="We cover the basics of HTML and CSS, then followed with lots of JavaScript practice" />
                            </HBox>
                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="blue" />
                                <Text text="Then we use real-world UI5 applications, build from step-to-step." />
                            </HBox>
                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="blue" />
                                <Text text="We will cover how to use SAP Web IDE, SAP BAS IDE, VSCODE to develop UI5 Apps." />
                            </HBox>

                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="blue" />
                                <Text text="you will be learn about to develop, troubleshooting, and 
deploy your UI5 web applications " />
                            </HBox>

                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="blue" />
                                <Text text="Learn to deploy UI5 apps on BTP and SAP ABAP Gateway" />
                            </HBox>

                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="blue" />
                                <Text text="We will also briefly cover how to run the UI5 application for non-SAP environment." />
                            </HBox>

                            <Toolbar>
                                <ToolbarSpacer />
                                <Title text="What you’ll learn" level="H2" />
                                <ToolbarSpacer />
                            </Toolbar>
                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="green" />
                                <Text text="Web Development- Basics of HTML, CSS, and lots of JavaScript practice" />
                            </HBox>

                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="green" />
                                <Text text="Use SAP Web IDE and SAP Fiori 3.0 Launchpad" />
                            </HBox>
                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="green" />
                                <Text text="Use OData service v4 and v2 in UI5 applications" />
                            </HBox>
                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="green" />
                                <Text text="JSON Model, Resource Model, and Data binding" />
                            </HBox>
                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="green" />
                                <Text text="Routing and Navigation and Device API in UI5" />
                            </HBox>
                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="green" />
                                <Text text="Create Basic web application in UI5" />
                            </HBox>
                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="green" />
                                <Text text="Tips to use of standard UI5 sdk documentation" />
                            </HBox>
                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="green" />
                                <Text text="Creating of Catalog and Groups on Fiori Launchpad" />
                            </HBox>
                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="green" />
                                <Text text="Adding application to Fiori launchpad" />
                            </HBox>
                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="green" />
                                <Text text="Understanding all the relevant Tcode in SAP Gateway server for Fiori" />
                            </HBox>
                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="green" />
                                <Text text="5 real time project scenarios in UI5" />
                            </HBox>

                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="green" />
                                <Text text="Deploy UI5 application to SAP Cloud Platform and SAP Gateway System" />
                            </HBox>
                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="green" />
                                <Text text="Deploy UI5 application to non-SAP environment" />
                            </HBox>
                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="green" />
                                <Text text="Troubleshooting and Debugging" />
                            </HBox>
                            <Toolbar>
                                <ToolbarSpacer />
                                <Title text="What is the target audience?" level="H3" />
                                <ToolbarSpacer />
                            </Toolbar>
                            <Text text="This course is meant for All SAP® Technical and Functional Consultants, Business Analysts, Project Managers and Developers who are trying to get into the SAP® world." />
                        </VBox>
                    </f:content>
                </f:Card>

                <f:Card class="sapUiMediumMargin" width="500px">
                    <f:header>
                        <card:Header title="SAP BTP Fullstack Developer Course" subtitle="40 Hour Course." />
                    </f:header>
                    <f:content>
                        <VBox>
                            <Toolbar>
                                <ToolbarSpacer />
                                <Title text="About this course" level="H3" />
                                <ToolbarSpacer />
                            </Toolbar>
                            <Text text="Get started with SAP® BTP, Create and Deploy Your Side-by-Side App in SAP® Cloud Foundry, Integrate Your App to S/4 On-Premise System" />
                            <Toolbar>
                                <ToolbarSpacer />
                                <Title text="Course highlights:" level="H3" />
                                <ToolbarSpacer />
                            </Toolbar>
                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="blue" />
                                <Text text="Get Started with SAP® BTP,  SAP® Cloud Foundry" />
                            </HBox>
                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="blue" />
                                <Text text="Understand Architecture, Structure, Concepts and Usage of SAP® BTP, SAP® Cloud Foundry" />
                            </HBox>
                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="blue" />
                                <Text text="Creating Services and Binding Apps in SAP® Cloud Foundry" />
                            </HBox>
                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="blue" />
                                <Text text="SAP® Cloud MTA Build Tool" />
                            </HBox>
                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="blue" />
                                <Text text="Creating Basic Deployment Files of Manifest.YAML and MTAR Files" />
                            </HBox>
                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="blue" />
                                <Text text="Side-by-Side Apps Development and Lifecycle" />
                            </HBox>
                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="blue" />
                                <Text text="Database Service and Consumption in App(HANA Cloud)" />
                            </HBox>
                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="blue" />
                                <Text text="VCAP Environment Variables of Cloud Apps" />
                            </HBox>
                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="blue" />
                                <Text text="SAP® Cloud Foundry XSUAA Service for App to Service Authentication" />
                            </HBox>
                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="blue" />
                                <Text text="SAP® Cloud Foundry App to SAP® On-Premise Connectivity with  Cloud Connector" />
                            </HBox>
                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="blue" />
                                <Text text="SAP® BTP Destination, XSUAA, Connectivity Service and More" />
                            </HBox>

                            <Toolbar>
                                <ToolbarSpacer />
                                <Title text="What you will learn" level="H3" />
                                <ToolbarSpacer />
                            </Toolbar>

                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="green" />
                                <Text text="Why and What is SAP BTP Cloud and BTP Overview?" />
                            </HBox>

                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="green" />
                                <Text text="What are Different Service Models of Cloud ?" />
                            </HBox>

                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="green" />
                                <Text text="IaaS vs SaaS vs PaaS ?" />
                            </HBox>

                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="green" />
                                <Text text="Usecase to Understand Use of SAP® BTP and SAP® Cloud Foundry(SCF)" />
                            </HBox>

                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="green" />
                                <Text text="Account Structure of SAP® BTP" />
                            </HBox>
                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="green" />
                                <Text text="Understanding terms - Subaccount, Space, Region, Space and Members Functionalities and Associations" />
                            </HBox>
                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="green" />
                                <Text text="What are Quota and Unit" />
                            </HBox>
                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="green" />
                                <Text text="Understanding - Services Marketplace, Instances, Key, Binding, Apps and User Management " />
                            </HBox>
                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="green" />
                                <Text text="Hands-on - CF CLI Installation, Marketplace, Buildpacks, App Start, Stop, Scale Up and Scale Down" />
                            </HBox>
                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="green" />
                                <Text text="Hands-on - App Deployment with Sample NodeJS App" />
                            </HBox>
                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="green" />
                                <Text text="Connecting to Database with Service Binding Using @sap/xsenv" />
                            </HBox>
                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="green" />
                                <Text text="Understanding the security concepts" />
                            </HBox>
                            <HBox>
                                <core:Icon src="sap-icon://accept" class="size2" color="green" />
                                <Text text="Detail development scenarios with SAP CAP Framework" />
                            </HBox>

                            <Toolbar>
                                <ToolbarSpacer />
                                <Title text="What is the target audience?" level="H3" />
                                <ToolbarSpacer />
                            </Toolbar>
                            <Text text="SAP® Developers and Techno-Functional Consultant. SAP Managers and SAP Architects" />
                        </VBox>
                    </f:content>
                </f:Card>
            </HBox>
            <Toolbar>
                <ToolbarSpacer />
                <Title text="Our Recipe to Transform your Career" level="H1" class="courseweoffer" />
                <ToolbarSpacer />
            </Toolbar>
            <HBox alignItems="Center" justifyContent="Center">
                <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tile" header="A structured and flexible program, that cares for you" press="press">
                    <TileContent footer="1">
                        <ImageContent src="sap-icon://activity-individual" />
                    </TileContent>
                </GenericTile>

                <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Be Mentored 1:1 by
Experienced Professionals" press="press">
                    <TileContent footer="2">
                        <ImageContent src="sap-icon://customer-and-contacts" />
                    </TileContent>
                </GenericTile>

                <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Mock Interview by Industry Experts" press="press">
                    <TileContent footer="3">
                        <ImageContent src="sap-icon://company-view" />
                    </TileContent>
                </GenericTile>

                <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Resume and Linkedin Profile Optimization" press="press">
                    <TileContent footer="4">
                        <ImageContent src="sap-icon://user-settings" />
                    </TileContent>
                </GenericTile>
            </HBox>
        </Panel>

        <Panel id="CoursesPanel">
            <Toolbar>
                <ToolbarSpacer />
                <Title text="Next Batch Details" level="H1" class="courseweoffer" />
                <ToolbarSpacer />
            </Toolbar>

            <SlideTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout">
                <tiles>
                    <GenericTile backgroundImage="test-resources/sap/m/demokit/sample/GenericTileAsFeedTile/images/NewsImage1.png" frameType="TwoByOne" press="press">
                        <TileContent footer="August 21, 2016">
                            <NewsContent contentText="Wind Map: Monitoring Real-Time and Fore-casted Wind Conditions across the Globe" subheader="Today, SAP News" />
                        </TileContent>
                    </GenericTile>
                    <GenericTile backgroundImage="test-resources/sap/m/demokit/sample/GenericTileAsFeedTile/images/NewsImage2.png" frameType="TwoByOne" press="press">
                        <TileContent footer="August 21, 2016">
                            <NewsContent contentText="SAP Unveils Powerful New Player Comparision Tool Exclusively on NFL.com" subheader="Today, SAP News" />
                        </TileContent>
                    </GenericTile>
                </tiles>
            </SlideTile>

            <Toolbar>
                <ToolbarSpacer />
                <Title text="Available Course Structure Details" level="H1" class="courseweoffer" />
                <ToolbarSpacer />
            </Toolbar>
        </Panel>

        <Panel id="ContactPanel">
            <Text text="Contact US" />
        </Panel>

        <HBox class="footer" id="homepageFooter" FlexAlignContent="Stretch" FlexAlignItems="Stretch">
            <HBox class="sapUiTinyMarginTop sapUiTinyMarginBegin">
                <Image src="./asset/SERP.png" width="55px" height="49px" decorative="true" densityAware="true" backgroundSize="cover" backgroundPosition="initial" />
                <Text text="Opportunities don't happen, you create them." class="footeroneLiner sapUiSmallMarginTop sapUiTinyMarginBegin" />

                <!-- <Text text="c 2022" class="footerText1  sapUiLargeMarginBegin sapUiTinyMarginTop" /> -->
            </HBox>
            <VBox class="sapUiSmallMarginTop sapUiLargeMarginBegin">
                <Text text="Follow us on" class="footerText1 sapUiTinyMarginTop sapUiTinyMarginBegin" />
                <HBox>
                    <Image src="./asset/LinkedinICon.svg" width="20px" height="20px" class="sapUiTinyMarginBegin sapUiTinyMarginTop" press="onLinkedinImagePress" />
                    <Image src="./asset/TwitterIcon.svg" width="20px" height="20px" class="sapUiTinyMarginBegin sapUiTinyMarginTop" press="onLinkedinImagePress" />
                </HBox>
            </VBox>

            <VBox class="sapUiSmallMarginTop sapUiLargeMarginBegin">
                <Text text="Services" class="footerText1 sapUiTinyMarginTop sapUiTinyMarginBegin" />
                <Text text="- Personalised online live training" class="footerSubText1 sapUiTinyMarginTop sapUiTinyMarginBegin" />
                <Text text="- Corporate training" class="footerSubText1 sapUiTinyMarginTop sapUiTinyMarginBegin" />
            </VBox>

            <VBox class="sapUiSmallMarginTop sapUiLargeMarginBegin">
                <Text text="© 2022 SIKHO ERP. All rights reserved." class="footerTextcopyright sapUiTinyMarginTop sapUiTinyMarginBegin" />
            </VBox>
        </HBox>
    </l:VerticalLayout>
</mvc:View>
