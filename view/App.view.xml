            </HBox>
            <Toolbar>
                <ToolbarSpacer />
                <Title text="Our Recipe to Transform your Career" level="H1" class="courseweoffer" />
                <ToolbarSpacer />
            </Toolbar>
            <HBox alignItems="Center" justifyContent="Center">
                <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tile" header="A structured and flexible program, that cares for you" press="press">
                    <TileContent footer="1">
                        <ImageContent src="sap-icon://activity-individual" />
                    </TileContent>
                </GenericTile>

                <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Be Mentored 1:1 by
Experienced Professionals" press="press">
                    <TileContent footer="2">
                        <ImageContent src="sap-icon://customer-and-contacts" />
                    </TileContent>
                </GenericTile>

                <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Mock Interview by Industry Experts" press="press">
                    <TileContent footer="3">
                        <ImageContent src="sap-icon://company-view" />
                    </TileContent>
                </GenericTile>

                <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Resume and Linkedin Profile Optimization" press="press">
                    <TileContent footer="4">
                        <ImageContent src="sap-icon://user-settings" />
                    </TileContent>
                </GenericTile>
            </HBox>
        </Panel>

        <Panel id="CoursesPanel">
            <Toolbar>
                <ToolbarSpacer />
                <Title text="Next Batch Details" level="H1" class="courseweoffer" />
                <ToolbarSpacer />
            </Toolbar>

            <SlideTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout">
                <tiles>
                    <GenericTile backgroundImage="test-resources/sap/m/demokit/sample/GenericTileAsFeedTile/images/NewsImage1.png" frameType="TwoByOne" press="press">
                        <TileContent footer="August 21, 2016">
